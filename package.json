{
  "name": "portfolio",
  "homepage": "",
  "version": "1.0.0",
  "scripts": {
    "start": "ng serve",
    "start:prod": "ng serve --configuration production",
    "build": "ng build --base-href",
    "build:prod": "node scripts/set-env.js --prod && ng build --configuration production",
    "preview:prod": "npm run build:prod && npx serve -s dist/portfolio -l 4200",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist/portfolio",
    "format": "prettier \"src/**/*.html\" --write",
    "format:check": "prettier \"src/**/*.html\" --check",
    "compodoc": "npx compodoc -p tsconfig.doc.json -w -s --hideGenerator",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "env:generate": "node scripts/set-env.js"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.2.15",
    "@angular/common": "^19.2.15",
    "@angular/compiler": "^19.2.15",
    "@angular/core": "^19.2.15",
    "@angular/forms": "^19.2.15",
    "@angular/platform-browser": "^19.2.15",
    "@angular/platform-browser-dynamic": "^19.2.15",
    "@angular/router": "^19.2.15",
    "@ngx-translate/core": "^16.0.4",
    "@ngx-translate/http-loader": "^16.0.1",
    "@portabletext/to-html": "^3.0.0",
    "@sanity/client": "^7.12.1",
    "@sanity/image-url": "^1.2.0",
    "@soarlin/angular-color-thief": "^2.0.4",
    "blast-vanilla": "^2.1.6",
    "flag-icons": "^7.5.0",
    "gh-pages": "^6.2.0",
    "ng-tagcanvas": "^1.0.2",
    "rxjs": "~7.8.1",
    "tslib": "^2.8.1",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.17",
    "@angular/cli": "^19.2.17",
    "@angular/compiler-cli": "^19.2.15",
    "@compodoc/compodoc": "^1.1.26",
    "@eslint/js": "^9.30.1",
    "@types/jasmine": "~5.1.5",
    "eslint": "^9.30.1",
    "globals": "^16.3.0",
    "jasmine-core": "~5.5.0",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "prettier": "^3.6.2",
    "typescript": "~5.6.0",
    "typescript-eslint": "^8.36.0"
  }
}
